{
  "name": "react_template",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "s": "yarn start",
    "build": "yarn lint && yarn clean && parcel build ./public/index.html",
    "start": "parcel serve --port 3000 ./public/index.html",
    "clean": "rm -rf ./dist",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:ts && yarn lint:json",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:tsc": "tsc --project .",
    "lint:ts": "prettier --check --parser typescript --config package.json 'src/**/*'",
    "lint:json": "prettier --check '**/*.json'"
  },
  "engines": {
    "node": "^14.15.3"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-react": "^7.21.5",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
